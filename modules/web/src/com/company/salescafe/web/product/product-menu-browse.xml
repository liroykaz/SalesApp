<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.salescafe.web.product.ProductMenuBrowse"
        focusComponent="productsTable"
        lookupComponent="productsTable"
        messagesPack="com.company.salescafe.web.product">
    <dsContext>
        <groupDatasource id="productsDs"
                         class="com.company.salescafe.entity.Product"
                         view="product-view">
            <query>
                <![CDATA[select e from salescafe$Product e where e.isAvailable = 'true']]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="productsTable"
            spacing="true">
        <filter id="filter"
                applyTo="productsTable"
                datasource="productsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="productsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="productName"/>
                <column id="weight"/>
                <column id="productPrice"/>
                <column id="isAvailable"/>
                <column id="residue"/>
                <column id="productType"/>
            </columns>
            <rows datasource="productsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="productsTable.create"/>
                <button id="editBtn"
                        action="productsTable.edit"/>
                <button id="removeBtn"
                        action="productsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
