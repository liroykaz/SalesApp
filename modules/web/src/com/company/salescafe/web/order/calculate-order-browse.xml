<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.salescafe.web.order.CalculateOrderBrowse"
        focusComponent="ordersTable"
        lookupComponent="ordersTable"
        messagesPack="com.company.salescafe.web.order">
    <dsContext>
        <groupDatasource id="ordersDs"
                         class="com.company.salescafe.entity.Order"
                         view="order-view">
            <query>
                <![CDATA[select e from salescafe$Order e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ordersTable"
            spacing="true">
        <groupBox caption="msg://dateFilter"
                  spacing="true">
            <hbox spacing="true">
                <dateField id="dateField"
                           dateFormat="dd.MM.yyyy"/>
                <button id="applyButton"
                        caption="msg://applyButton"
                        invoke="onApplyButtonClick"/>
            </hbox>
        </groupBox>
        <groupTable id="ordersTable"
                    aggregatable="true"
                    visible="false"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="excel"/>
                <action id="refresh"/>
            </actions>
            <columns>
                <column id="numberOfOrder"/>
                <column id="orderStatus"/>
                <column id="nameOfCustomer"/>
                <column id="timeOfOrder"/>
                <column id="allCost">
                    <aggregation type="SUM"/>
                </column>
                <column id="comment"/>
            </columns>
            <rows datasource="ordersDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="ordersTable.create"/>
                <button id="editBtn"
                        action="ordersTable.edit"/>
                <button id="removeBtn"
                        action="ordersTable.remove"/>
                <button id="excelBtn"
                        action="ordersTable.excel"/>
                <button id="refreshBtn"
                        action="ordersTable.refresh"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
